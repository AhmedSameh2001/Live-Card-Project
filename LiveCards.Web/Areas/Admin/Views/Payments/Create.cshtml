@using LiveCards.Web.ViewModel
@model CreatePaymentViewModel


<form asp-action="Create">
    <div class="row ">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header border-bottom-0">
                    <div class="card-title" style="margin-left:1%;">
                        Payment Form for Create
                    </div>
                </div>

                <h3 style="margin-left:3%;">Payment Details</h3>
                <section style="padding:20px">
                    <div class="form-group">
                        <label asp-for="Amount" class="form-label">Amount</label>
                        <input type="number" required class="form-control" asp-for="Amount">
                    </div>
                    <div class="form-group">
                        <label class="label-contol" asp-for="Id"></label><br />
                        <select class="form-control" asp-items="ViewBag.PaymentsList" asp-for="Id">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExhangeRate" class="form-label">Currency</label>
                        <select type="text" required class="form-control" asp-for="ExhangeRate" placeholder="قم بتحديد العملة المناسبة للتحويل">
                            <option>شيكل إسرائيلي</option>
                            <option>دولار أمريكي</option>
                            <option>دينار أردني</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label" asp-for="Status">Payment method</label>
                        <div class="input-group">
                            <select type="text" class="form-control" asp-for="Status">
                                <option>Visa Card</option>
                                <option>Paypal</option>
                                <option>تحويل بنكي</option>
                            </select>

                            <span class="input-group-text btn btn-info shadow-none mb-0">
                                <i class="fa fa-cc-visa"></i> &nbsp; <i class="fa fa-cc-amex"></i> &nbsp;
                                <i class="fa fa-cc-mastercard"></i>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label class="form-label" asp-for="Note">Note</label>
                        <textarea class="form-control" class="form-control" asp-for="Note" rows="2"></textarea>
                    </div><br />

                    <div class="col-md-6">
                        <input class="btn btn-primary" type="submit" value="Save" asp-controller="Payments" asp-action="index" />
                        <a asp-controller="Payments" asp-action="index" class="btn btn-danger">Back</a>
                    </div>
                </section>
            </div>
        </div>
    </div>
</form>



