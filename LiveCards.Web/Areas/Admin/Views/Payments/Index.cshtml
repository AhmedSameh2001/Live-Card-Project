@using LiveCards.Web.Models
@model List<LiveCards.Models.Payment>

<a asp-action="Create" asp-controller="Payments" class="btn btn-primary" style="font-size:20px;">Add Payments</a>
<br />
<br />



@if (Model.Any())
{
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Basic Edit Table</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered border text-nowrap mb-0" id="basic-edit">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Amount</th>
                                    <th>Exchange Rate</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.Id</th>
                                        <th>@item.Amount</th>
                                        <th>@item.ExhangeRate</th>
                                        <th>@item.Date.ToString("dd/MM/yyyy")</th>
                                        <th>
                                            <a href="~/Payments/Update/@item.Id" class="btn btn-success">Update</a>
                                            <a href="~/Payments/Delete/@item.Id" class="btn btn-danger">Delete</a>
                                        </th>
                                    </tr>
                                }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        <h3>There are no Payments</h3>
    </div>
}

