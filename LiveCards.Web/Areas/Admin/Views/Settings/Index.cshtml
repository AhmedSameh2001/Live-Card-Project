<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KVal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.KVal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefaultValue)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.KKey">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.KKey">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.KKey">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts{
    <script>
        $('.setting-details').hide();
        $('#general').show();


        $('.list-group-item').on("click", function() {
            $('.setting-details').hide();
            var idd = $(this).attr('data-id');
            $('#' + idd).show();

        });
    </script>

